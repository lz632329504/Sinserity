/* pages/myorder/myorder.wxss */
.black{
  background-color: #e9e9e9;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}
.contain{
  background-color: #e9e9e9;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom:10rpx;
  margin-bottom: 90rpx;
}
.time{
  margin-top:20rpx;
  margin-left: 20rpx;
  font-size: 25rpx;
  color: #767676;
  line-height: 45rpx;
}
.my-info{
  width: 100%;
  height: 180rpx;
  background-color:white;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.my-info image{
  width: 110rpx;
  height: 110rpx;
  margin-top: 35rpx;
  margin-left: 20rpx;
}
.txt-zu{
  height: 110rpx;
  margin-top: 35rpx;
  margin-left: 20rpx;
  margin-right:auto;
}
.zu-tit{
  display: block;
  font-size: 30rpx;
}
.zu-stit{
  display: block;
  font-size: 20rpx;
  color:#767676;
  line-height: 35rpx;
}
.zu-pri{
  display: block;
  font-size: 30rpx;
  color:red;
}
.zhuangtai{
  height: 30rpx;
  width: 90rpx;
  font-size: 20rpx;
  text-align: center;
  margin-top: 75rpx;
  margin-right: 20rpx;
  color: white;
}

.dengdai{
  background-color: #e0e0e0;
}
.daishou{
  background-color: #FE7700;
}
.wancheng{
  background-color:rgb(13, 209, 95);
}
.shouhou{
  background-color:red;
}


.bottom{
  width:100%;
  height: 60rpx;
  padding: 15rpx 0 14rpx;
  background-color:#FE7700;
  color:white;
  line-height:60rpx;
  text-align: center;
  font-size: 28rpx;
  position: fixed;
  bottom: 0;
  z-index: 999
}


