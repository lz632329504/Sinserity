/* pages/comdet/comdet.wxss */
swiper{
  width: 100%;
  height:750rpx;
}
swiper image{
  width: 100%;
  height:750rpx;
}
.con-txt{
  padding: 20rpx;
  box-sizing: border-box;
}
.title{
  font-size: 30rpx;
  word-break:break-all;
  padding:5rpx 0;
}
.stitle{
  font-size: 25rpx;
  color: #767676;
  padding: 10rpx 0;
}
.price{
  display: inline-block;
  color: red;
  font-size: 34rpx;
}
.yprice{
  display: inline-block;
  margin-left: 20rpx;
  font-size: 25rpx;
  text-decoration:line-through;
}
.canshu{
  width: 100%;
  padding:0 20rpx;
}
.canshu-one{
  color:#767676;
  font-size: 30rpx;
  border-bottom: 1px solid #e7e7e7;
  padding: 25rpx 0;
}
.canshu-one text{
  color: black;
}
.canshu-two{
  font-size: 25rpx;
  padding: 25rpx 0;
}
.canshu-two icon{
  margin-right: 5rpx;
  margin-left: 20rpx;
}
.canshu-two icon:first-child{
  margin-left:0;
}
.gaishu{
  padding: 7rpx;
  text-align: center;
}
.gaishu view{
  display: inline-block;
  color: #FE7700;
  font-size: 30rpx;
  padding: 15rpx;
  border-bottom: 2rpx solid #FE7700;
}
.xiangqingye{
  width: 100%;
}
.xiangqingye image{
  width: 100%;
  display: block;
  margin: 0;
  padding: 0;
}
.bottom{
  height:80rpx;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: white;
  border-top:1px solid white;
  box-sizing: border-box;
  color: white;
  font-size: 34rpx;
}
.gouwuche{
  width: 14%;
  height: 80rpx;
  float: left;
}
.gouwuche image{
  width: 50%;
  margin-top: 10%;
  margin-left: 30%;
}
.jiaru{
  height: 80rpx;
  float: left;
  width: 43%;
  background-color: #FE7700;
  line-height: 80rpx;
  text-align: center;
}
.goumai{
  height: 80rpx;
  float: left;
  width: 43%;
  background-color: #FF4500;
  line-height: 80rpx;
  text-align: center;
}
